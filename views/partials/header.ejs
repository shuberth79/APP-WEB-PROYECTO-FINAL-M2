<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <style>
        @media all and (min-width: 992px) {
            .navbar .dropdown:hover .dropdown-menu {
                display: block;
                margin-top: 0; 
            }
        }
        #authDropdown .dropdown-menu {
            right: 0 !important; 
            transform: translateX(-15px) !important; 
        }
        #navbarDropdownAuth {
            padding: 0.5rem 0.75rem; 
        }
    </style>
</head>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">

        <a class="navbar-brand" href="/"> <img src="/resources/img/LOGO ALPHA.png" width="55" aling="center" alt=""></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            
            <ul class="navbar-nav">
                <% if (login && rol === "admin") { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Administración</a>
                    </li>
                <% } %>
                <% if (login && rol === "user") { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/usuario_dashboard">Usuarios</a>
                    </li>
                <% } %>
                
                <% if (!login) { %>
                    <li class="nav-item d-lg-none">
                        <a class="nav-link" href="/login">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión
                        </a>
                    </li>
                    <li class="nav-item d-lg-none">
                        <a class="nav-link" href="/registro">
                            <i class="bi bi-person-plus-fill me-2"></i> Registrarse
                        </a>
                    </li>
                <% } %>
                
                <% if (login) { %>
                    <li class="nav-item d-lg-none">
                        <a class="nav-link text-danger fw-bold" href="/logout">
                            <i class="bi bi-box-arrow-right me-1"></i> Cerrar Sesión
                        </a>
                    </li>
                <% } %>

            </ul>

            <ul class="navbar-nav ms-auto d-none d-lg-flex"> 

                <% if (!login) { %>
                    <li class="nav-item dropdown" id="authDropdown">
                        <a class="nav-link" href="#" id="navbarDropdownAuth" role="button" aria-expanded="false" style="font-size: 2rem; color: #888;">
                            <i class="bi bi-person-circle"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownAuth">
                            <li><a class="dropdown-item" href="/login"><i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión</a></li>
                            <li><a class="dropdown-item" href="/registro"><i class="bi bi-person-plus-fill me-2"></i> Registrarse</a></li>
                        </ul>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="btn btn-sm text-white fw-bold" href="/logout" 
                        style="background-color: #b463b3; border-color: #b463b3;">
                            <i class="bi bi-box-arrow-right me-1"></i> Cerrar Sesión
                        </a>
                    </li>
                <% } %>

            </ul>
        </div>
    </div>
</nav>