<%- include('partials/head') %> <%- include('partials/header') %>
    <% if(usuario){ %>
        <div class="container mt-4 w-25">
            <div class="card border-secundary">
                <div class="card-header"> Modificar registro</div>
                <div class="card-body">
                    <form action="/update_usuario" method="post">
                        <input type= "hidden" id="usuario_id" name="usuario_id" value="<%= usuario.usuario_id %>"/>

                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombres: </label>
                            <input type="text" class="form-control" id="nombre" name="nombre"
                                value="<%= usuario.nombre %>"/>
                        </div>
                        <div class="mb-3">
                            <label for="rol">Rol:</label>
                            <!-- <select name="rol">
                                <option value="admin">Administrador</option>
                                <option value="user">Usuario</option>
                            </select> -->
                            <select name="rol" class="form-select" id="rol">
                                <option value="admin" <%= usuario.rol === 'admin' ? 'selected' : '' %>>Administrador</option>
                                <option value="user" <%= usuario.rol === 'user' ? 'selected' : '' %>>Usuario</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">email: </label>
                            <input type="email" class="form-control" id="email" name="email"
                                value="<%= usuario.email %>"/>
                        </div>
                        <div class="form-group">
                            <label for="telefono" class="form-label">telefono:</label>
                            <input type="tel" class="form-control" id="telefono" name="telefono"
                                value="<%= usuario.telefono %>"/>
                        </div>
                        <div class="mb-3">
                            <label for="direccion" class="form-label">direccion: </label>
                            <input type="text" class="form-control" id="direccion" name="direccion"
                                value="<%= usuario.direccion %>"/>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a href="/admin" class="btn btn-danger">Cancelar</a>
                    </form>
                </div> 
            </div>
        </div>
        <% } else { %>
            <h1>usuario no encontrado</h1>
            <% } %>

                <%- include('partials/footer') %>