<%- include('partials/head') %>
    <%- include('partials/header') %>

        <div class="container mt-4 w-25">
            <div class="card border-secundary">
                <div class="card-header"> Agregar Usuario</div>
                <div class="card-body">
                    <form action="/save_usuario" method="post">
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombres: </label>
                            <input type="text" class="form-control" id="nombre" name="nombre">
                        </div>
                        <div class="mb-3">
                            <label for="rol">Rol:</label>
                            <select name="rol">
                                <option value="admin">Administrador</option>
                                <option value="user">Usuario</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">email: </label>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                        <div class="mb-3">
                            <label for="pass" class="form-label">pass: </label>
                            <input type="password" class="form-control" id="pass" name="pass">
                        </div>
                        <div class="mb-3">
                            <label for="telefono" class="form-label">telefono: </label>
                            <input type="tel" class="form-control" id="telefono" name="telefono">
                        </div>

                        <div class="form-group">
                            <label for="direccion" class="form-label">direccion:</label>
                            <input type="text" class="form-control" id="direccion" name="direccion">
                        </div>
                        <br>
                        <!-- <button type="submit" class="btn btn-primary">Guardar</button>
                        <a href="/admin" class="btn btn-danger">Cancelar</a> -->
                        <button type="submit" class="btn btn-primary"
                            style="background-color: #2e8eee; border-color: #2e8eee;"
                                onmouseover="this.style.backgroundColor='#b463b3'; this.style.borderColor='#b463b3';"
                                onmouseout="this.style.backgroundColor='#2e8eee'; this.style.borderColor='#2e8eee';">
                                Guardar
                        </button>
                            <a href="/admin" class="btn btn-danger" 
                                style="background-color: #2e8eee; border-color: #2e8eee;"
                                onmouseover="this.style.backgroundColor='#b463b3'; this.style.borderColor='#b463b3';"
                                onmouseout="this.style.backgroundColor='#2e8eee'; this.style.borderColor='#2e8eee';">
                                Cancelar
                            </a>
                    </form>

                </div>
            </div>
        </div>

        <%- include('partials/footer') %>